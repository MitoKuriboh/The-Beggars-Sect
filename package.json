{
  "name": "the-beggars-sect",
  "version": "0.3.3",
  "description": "A CLI RPG set in the Martial Arts Haven universe",
  "main": "dist/index.js",
  "bin": "dist/index.js",
    "scripts": {
    "dev": "tsx watch src/index.tsx",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts,.tsx",
    "package": "npm run build && pkg . --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --output dist/beggars-sect --compress GZip"
  },
  "pkg": {
    "scripts": ["dist/**/*.js", "node_modules/**/*.js"],
    "assets": ["node_modules/yoga-layout-prebuilt/**/*"],
    "outputPath": "dist"
  },
  "keywords": [
    "cli",
    "rpg",
    "game",
    "martial-arts",
    "ink",
    "typescript"
  ],
  "author": "Mito (Mitchell Grebe)",
  "license": "UNLICENSED",
  "dependencies": {
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "cli-spinners": "^2.9.2",
    "figlet": "^1.7.0",
    "ink": "^3.2.0",
    "ink-select-input": "^4.0.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vercel/ncc": "^0.38.4",
    "esbuild": "^0.27.1",
    "eslint": "^8.56.0",
    "pkg": "^5.8.1",
    "react-devtools-core": "^4.28.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
